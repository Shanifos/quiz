<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="What is your name?"
            android:text=""
            android:textColor="#000"
            android:textSize="20dp"/>


        <TextView
            android:id="@+id/question1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/name"
            android:layout_marginTop="13dp"
            android:text="1)Who went to school with a lamb? " />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/question1">

            <RadioButton
                android:id="@+id/Sally"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Sally" />

            <RadioButton
                android:id="@+id/Alice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alice" />

            <RadioButton
                android:id="@+id/Mary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mary" />
        </RadioGroup>

        <TextView
            android:id="@+id/question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/radioGroup1"
            android:layout_marginTop="16dp"
            android:text="2) Who went up the hill " />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question2">

            <CheckBox
                android:id="@+id/Jill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Jill" />

            <CheckBox
                android:id="@+id/Paul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Paul" />

            <CheckBox
                android:id="@+id/Jack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jack" />

        </RadioGroup>
        <TextView
            android:id="@+id/question3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/radioGroup2"
            android:layout_marginTop="12dp"
            android:text="3) What did Jimmy crack?" />
        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question3">

            <RadioButton
                android:id="@+id/corn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Corn" />
            <RadioButton
                android:id="@+id/Nuts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:text="Nuts" />
            <RadioButton
                android:id="@+id/Knuckles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Knuckles" />

        </RadioGroup>
        <TextView
            android:id="@+id/question4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup3"
            android:text="4) What furniture fell out of the tree?" />
        <RadioGroup
            android:id="@+id/radioGroup4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question4">
            <RadioButton
                android:id="@+id/Table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="11dp"
                android:text="Table" />

            <RadioButton
                android:id="@+id/cradle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/Nuts"
                android:text="Cradle" />

            <RadioButton
                android:id="@+id/chair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/radioButton"
                android:layout_below="@+id/corn"
                android:text="Chair" />

        </RadioGroup>
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup4"
            android:layout_marginStart="16dp"
            android:text="Submit" />

    </RelativeLayout>
</ScrollView>